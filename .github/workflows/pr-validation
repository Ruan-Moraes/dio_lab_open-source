name: PR Validation

on:
  pull_request_target:
    types:
      - opened
      - synchronize

jobs:
  validate:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code from PR (Safe Checkout)
      uses: actions/checkout@v4
      with:
        ref: ${{ github.event.pull_request.head.sha }}
        
    - name: Validate PR
      run: |
        AUTHOR_NAME="${{ github.actor }}"
        FILE_PATH="community/$AUTHOR_NAME.md"
        
        if [[ ! -f $FILE_PATH ]]; then
            echo "ERROR: Expected a file at $FILE_PATH, but it doesn't exist."
            exit 1
        fi
        
    - name: Post Comment if Validation Fails
      if: failure()
      run: |
        echo "Ei!? Parece que algo nÃ£o deu certo com o seu PR. Ele deve conter apenas um arquivo `.md` na pasta `community/` e o nome desse arquivo deve ser o mesmo que o seu nome de usuÃ¡rio no GitHub. Revise e tente novamente." > message.txt
        gh pr comment ${{ github.event.pull_request.number }} --body-file=message.txt
      env:
        GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}

    - name: Approve and Comment PR
      if: success()
      run: |
        REPO_URL=${{ github.event.pull_request.head.repo.html_url }}
        echo "AÃ­ sim hein! Seu PR foi aprovado ðŸ¥³ VocÃª jÃ¡ pode submeter a URL do seu repositÃ³rio na plataforma da DIO: $REPO_URL. Faremos o merge aqui em breve. Muito obrigado por fazer parte da nossa comunidade ðŸš€" > message.txt
        gh pr comment ${{ github.event.pull_request.number }} --body-file=message.txt
        gh pr edit ${{ github.event.pull_request.number }} --add-label "automerge"
      env:
        GH_TOKEN: ${{ secrets.FALVOJR_PAT }}
